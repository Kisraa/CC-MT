@{
    ViewBag.Title = "Detail";
    Layout = "~/Views/Shared/_Layout.cshtml";
}
<h2>Chi Tiết Loại Sản Phẩm</h2>
<fieldset>
    <div class="display-label">Mã loại: @Model.maloaisp</div>
    <div class="display-label">Tên loại: @Model.tenloaisp</div>
</fieldset>
@using (Html.BeginForm())
{
    <p>
        @Html.ActionLink("Xóa", "Delete", new { id = Model.maloaisp }) |
        @Html.ActionLink("Sửa", "Edit", new { id = Model.maloaisp }) |
        @Html.ActionLink("Trở về", "Index")
    </p>
}
