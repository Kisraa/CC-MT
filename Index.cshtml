@model IEnumerable<QuanLyKho.Models.TheLoaiSP>
@{
    ViewBag.Title = "Index";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<h2>Loại Sản Phẩm</h2>
<table border="1px"> 
    <tr>
        <th>Mã loại</th>
        <th>Tên loại </th>
        <th></th>
    </tr>
    @foreach (var item in Model)
    {
        <tr>
            <td>@item.maloaisp</td>
            <td>@item.tenloaisp</td>
        <td>
            @Html.ActionLink("Sửa", "Edit", new { id = item.maloaisp }) |
            @Html.ActionLink("Chi Tiết", "Detail", new { id = item.maloaisp }) |
            @Html.ActionLink("Xóa", "Delete", new { id = item.maloaisp })
        </td>
        </tr>
    }
</table>
@Html.ActionLink("Thêm", "Create", "TheloaiSP")